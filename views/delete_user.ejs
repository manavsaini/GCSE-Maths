
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/welcome-user?id=<%= user._id%>"><i class="fas fa-angle-double-left"></i> Back</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Delete the details of below user</h2>
        </div>
  
        <!-- form handling -->
        <form method="DELETE" id="delete_user">
            <div class="new_user">

                <table class="table">
                    <tbody>                 
                        <thead class="thead-dark">
                            <tr>
                                <th> <%= user.name%> </th>
                                <th> <%= user.email%> </th>
                                <th> <%= user.gender%> </th>
                                <th> Reward Points: <%= user.totalRewardPoints%> </th>
                            </tr>
                        </thead>
                    </tbody>
                </table>

                <div class="form-group">
                    <input type="hidden" name="id" value="<%= user._id %>">
                    <button type="submit" class="btn text-dark update">Delete</button>
                </div>
        
            </div>
        </form>

    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
