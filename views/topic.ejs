
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->


    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <table class="table">
                <tbody>
                    <tr>
                        <th>
                            <div class="box-nav d-flex justify-between">
                                <div class="filter">
                                    <a href="/welcome-user?id=<%= user._id %>"><i class="fas fa-angle-double-left"></i> Back</a>
                                </div>
                            </div>
                        </th>
                        </th><th></th><th></th>
                        <th>Welcome to <%= user.quiz[0].topic %> section</th>
                       <td>
                            <a href="/welcome-user?id=<%= user._id %>" class="btn border-shadow update">
                                <span class="text-gradient"> Home </span>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
            
            <table class="table">
                <tbody>                 
                    <thead class="thead-dark">
                        <tr>
                            <th></th>
                            <th> Hey <%= user.name %> !!!</th>
                            <th></th>
                            <th> It's quiz time. Be ready !!! </th>
                            <th></th>
                            <th> Reward Points: <%= user.totalRewardPoints %> </th>
                            <th> </th>
                        </tr>
                    </thead>
                </tbody>
            </table>
            <h4><span class="text-light">User_Id:<%= user._id %></span></h4>

            <h4><span class="text-light">Topic1_Id:<%= user.quiz[0]._id %></span></h4>
            <h4><span class="text-light">Question1_Id:<%= user.quiz[0].questionBank[0]._id %></span></h4>
            <h4><span class="text-light">Question2_Id:<%= user.quiz[0].questionBank[1]._id %></span></h4>

            <h4><span class="text-light">Topic2_Id:<%= user.quiz[1]._id %></span></h4>
            <h4><span class="text-light">Question1_Id:<%= user.quiz[1].questionBank[0]._id %></span></h4>
            <h4><span class="text-light">Question2_Id:<%= user.quiz[1].questionBank[1]._id %></span></h4>

            <div class="form-title text-center">
                <h4><span class="text-light">Select below questions to test your knowledge</span></h4>
            </div>

            <% for(var i = 0; i < user.quiz[0].questionBank.length; i++) { %>
                <div class="form-title text-center">
                    <div class="filter">
                        <a href="/"><h4 class="text-dark"><i class="fas fa-angle-double-right"></i> Question-<%= i+1 %> </h4></a>
                    </div>
                </div>
            <% } %>
            
        </div>
    </main>
<!-- /Main Site -->


<!-- include footer -->
<%- include('include/_footer') %>
